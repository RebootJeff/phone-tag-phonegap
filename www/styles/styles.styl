// :-moz-placeholder
//   color: $color_placeholder_text
// ::-moz-placeholder
//   color: $color_placeholder_text
// :-ms-input-placeholder
//   color: $color_placeholder_text

#container
  position: absolute
  width: 100%
  height: 100%
  text-align: center
  overflow: hidden

a
  color: $color_light_blue
  text-decoration: none
  font-weight: bold

.topcoat-button, .topcoat-button--large, .topcoat-button--cta, .topcoat-button--large--cta
  font-size: 2em
  border: 0
  padding: 0.5em
  margin: 0.5em

.topcoat-button, .topcoat-button--large
  background-color: $color_pastel_sky

.topcoat-button--cta, .topcoat-button--large--cta
  background-color: $color_dark_teal

h1
  font-weight: 400
  font-size: 2.5em

table
  margin: auto

// ----------------------------------------
// screen transitions

transform(n)
  -webkit-transform: n
  -moz-transform: n
  -ms-transform: n
  -o-transform: n
  transform: n

transition-duration(n)
  -webkit-transition-duration: n
  -moz-transition-duration: n
  -o-transition-duration: n
  transition-duration: n

.page
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  transform(translate3d(0, 0, 0))

.page.left
  transform(translate3d(-100%, 0, 0))

.page.center
  transform(translate3d(0, 0, 0))

.page.right
  transform(translate3d(100%, 0, 0))

.page.transition
  transition-duration(0.25s)

// --------------------------------------------
// "join" screen

.join
  font-size: 2em

// --------------------------------------------
// map

.menu
  height: 100%
  width: 30%
  position: absolute
  left: 0
  z-index: 11
  background-color: black
  transition-property: all
  transition-duration(0.1s)
  .topcoat-button, .topcoat-button--large
    width: 1.7em
    height: 1.7em
    line-height: 1
    background-repeat: no-repeat
    background-position: center

.menu.closed
  left: -30%

.quit
  background-image: url('../img/exit.png')

.center-map
  background-image: url('../img/map-center.png')

.power-up
  width: 1.5em
  height: 1.5em
  background-image: url('../img/map-center.png')

.toggle-menu
  position: absolute
  top: 0
  left: 100%
  margin: 0
  background-image: url('../img/cabinet.png')

#map-canvas
  position: absolute
  width: 100%
  height: 100%

.bottom-controls
  position: fixed
  bottom: 0
  width: 100%
  height: 20%

.tag
  bottom: 2%
  width: 30%
  background-color: $color_deep_red
  color: white
