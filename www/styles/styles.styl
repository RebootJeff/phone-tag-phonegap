@import "topcoat-mobile-light.css"

// --------------------------------------------
// color definitions

$color_pastel_sky = #96B8FF
$color_medium_grass = #88C425
$color_medium_moss = #25C43E
$color_dark_grass = #519548
$color_dark_teal = #1B676B
$color_deep_red = #C9001B
$color_placeholder_text = #666

// --------------------------------------------
// font setup

@font-face {
  font-family: "Geared Slab";
  src: url("font/GearedSlab.ttf");
}

@font-face {
  font-family: "Geared Slab";
  src: url("font/GearedSlab-Light.ttf");
  font-weight: 200;
}

@font-face {
  font-family: "Geared Slab";
  src: url("font/GearedSlab-Bold.ttf");
  font-weight: 600;
}

@font-face {
  font-family: "Geared Slab";
  src: url("font/GearedSlab-Extrabold.ttf");
  font-weight: 800;
}

// --------------------------------------------
// universal styles

body
  margin: 0
  padding: 0
  font-family: 'Geared Slab'
  font-size: 24px
  color: white
  position: absolute
  top: 0
  left: 0
  bottom: 0
  right: 0
  background: black

h1
  font-weight: 800
  margin-top: 0.7em
  margin-bottom: 0.7em

input[type='text']
  width: 80%
  font-size: 1.5em
  display: block
  margin: auto
  // padding: 0.5em
  // color: black
  // background-color: $color_light_blue
  // border: 0
  // border-radius: 8px

// NOTE: These placeholder text styles won't work if combined into 1 multi-selector
// Reference Source:
//   http://stackoverflow.com/questions/2610497/change-an-inputs-html5-placeholder-color-with-css
